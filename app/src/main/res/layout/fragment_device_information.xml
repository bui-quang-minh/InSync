<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DeviceInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Improved CardView for Device Dimensions with Screen Shape -->
        <androidx.cardview.widget.CardView
            android:id="@+id/dimensions_card"
            android:layout_width="220dp"
            android:layout_height="350dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@id/device_name_card"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipChildren="false">

                <!-- Wrap screen shape and brand name in a FrameLayout -->
                <FrameLayout
                    android:id="@+id/screen_segment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <!-- Screen Shape Representation -->
                    <View
                        android:id="@+id/screen_shape"
                        android:layout_width="109dp"
                        android:layout_height="226dp"
                        android:background="@drawable/mobile_screen"
                        android:elevation="4dp" />

                </FrameLayout>

                <!-- Width Arrow on Top -->
                <ImageView
                    android:id="@+id/arrow_width"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:layout_above="@id/screen_segment"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Width Arrow"
                    android:src="@drawable/double_head_horizontal_arrow" />

                <!-- Width Value on Top of Arrow -->
                <TextView
                    android:id="@+id/width_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/arrow_width"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="1080 px"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Height Arrow on Right -->
                <ImageView
                    android:id="@+id/arrow_height"
                    android:layout_width="9dp"
                    android:layout_height="214dp"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/screen_segment"
                    android:layout_alignTop="@id/screen_segment"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Height Arrow"
                    android:src="@drawable/double_head_vertical_arrow" />

                <!-- Height Value to the Right of Arrow -->
                <TextView
                    android:id="@+id/height_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="-20dp"
                    android:layout_toEndOf="@+id/arrow_height"
                    android:ellipsize="none"
                    android:rotation="90"
                    android:singleLine="true"
                    android:text="2214 px"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/manufacturer_info"
                    android:layout_width="80dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:text="manufacturer model"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"  />

                <TextView
                    android:id="@+id/density"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/screen_segment"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:text="Density: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/density"
                    android:layout_marginLeft="50dp"
                    android:text="Orientation: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for Device Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/device_name_card"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/device_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung SPH-L710"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/storage_info_card"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/device_name_card"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/storage_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/storage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 / 41 GB"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ram_info_card"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/storage_info_card"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ram_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RAM"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ram_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000 / 8000 MB"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Device ID and Memory -->
        <androidx.cardview.widget.CardView
            android:id="@+id/device_id_memory_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/dimensions_card"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/other_specs_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Specifications"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/device_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device ID: f1733c58e2306eb2"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/other_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other info"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
