<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/circle_popup"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="10sp"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/accessibility_service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Allow InSync to access your\nAccessibility Service"
            android:background="@drawable/border_bottom"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="@string/accessibility_service"
            android:background="@drawable/border_bottom"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_guide"
            android:layout_weight="5"
            app:iconTint="@null"
            app:strokeColor="@color/neutral_400"
            app:strokeWidth="1dp"
            android:backgroundTint="@android:color/white"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Guide"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Move to Settings"
            android:id="@+id/request_button"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</LinearLayout>